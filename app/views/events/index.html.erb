<h1>All events</h1>

<div>
<%= link_to "Create an event", new_event_path%>
<h3>Upcoming events</h3>
    <table>
        <tr>
            <th>name</th>
            <th>Description</th>
            <th>Date</th>
            <th>Location</th>
            <th colspan='1'></th>
        </tr>
            <% @events.upcoming.each do |event|%>
                <tr>
                    <td><%= event.name%></td>
                    <td><%= event.description%></td>
                    <td><%= event.date%></td>
                    <td><%= event.location%></td>
                    <td><%= link_to "See more", event_path(event)%>
                </tr>
            <%end%>
    </table>  
<h3>Past events</h3>
            <table>
                    

                <tr>
                    <th>name</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Location</th>
                </tr>
                    <% @events.past.each do |event|%>
                <tr>
                    <td><%= event.name%></td>
                    <td><%= event.description%></td>
                    <td><%= event.date%></td>
                    <td><%= event.location%></td>
                    <td><%= link_to "See more", event_path(event)%>
                </tr>
                    <%end%>
            </table>
    <h3> Users </h3>
            <table>
                    <%@users.each do |user|%>
                <tr>
                    <td><%= user.username%></td>
                    <td><%= link_to 'See profile', '/users/' + user.id.to_s %></td>
                </tr>
                    <%end%>
            </table>

